{
	"version": "0.1.0",
    "command": "C:/msys32/usr/bin/bash.exe",
	"args": ["-c"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}",
        "env": {
            "IDF_PATH" : "C:/ESP32-IDK-SDK/esp-idf/" ,
            "PATH" : "C:/msys32/usr/bin/;C:/msys32/opt/xtensa-esp32-elf/bin"
        }
	},
    "tasks": [
        {
            "taskName": "build app",
            "args": ["make app"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "clean",
            "suppressTaskName": true,
            "args": ["make app-clean"]
        },
        {
            "taskName": "monitor",
			"suppressTaskName": true,
			"args": [
				"python C:/ESP32-IDK-SDK/esp-idf/tools/idf_monitor.py --port /dev/COM12 --baud 115200 build/Imagine.elf"
			]
        },
        {
			"taskName": "flash",
            "isBuildCommand": true,
            "args": ["make app-flash"]
        },
        {
			"taskName": "menuconfig",
			"isShellCommand": true,
            "args": ["make menuconfig"]
        },
    ]
}