{
	//"C_Cpp.clang_format_path": "C:/Program Files/LLVM/bin/clang-format.exe",
	"C_Cpp.clang_format_style": "Visual Studio",
	"C_Cpp.clang_format_formatOnSave": false,
	"[cpp]": {
		"editor.quickSuggestions": true
	},
	"[c]": {
		"editor.quickSuggestions": true
	},
	"editor.formatOnSave": false,
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.wordWrap": "on",
	"files.trimTrailingWhitespace": true,
	"files.associations": {
		"thread": "cpp",
		"array": "cpp",
		"initializer_list": "cpp",
		"utility": "cpp",
		"system_error": "cpp",
		"functional": "cpp",
		"type_traits": "cpp",
		"tuple": "cpp",
		"xstring": "cpp",
		"iosfwd": "cpp",
		"xlocale": "cpp"
	},
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/*.old": true,
		"**/*.rst": true,
		"**/build": true,
		"**/UnitTest Wifi + RFID": true,
		"**/CVS": true,
		"**/.DS_Store": true
	  },
	  "perforce.editOnFileModified": true,
	"perforce.addOnFileCreate": true,
	"perforce.editOnFileSave": true,
	"perforce.annotate.enable": true,
	"perforce.deleteOnFileDelete": true,
	"C_Cpp.intelliSenseEngine":"Default"
}